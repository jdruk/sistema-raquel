<h1>Lista de pagamentos</h1>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Cliente</th>
            <th>Valor</th>
            <th>Tipo/th>
            <th>Data</th>
            <th>Descrição</th>
            <th>Cliente</th>
            <th colspan="3"></th>
        </tr>
    </thead>

    <tbody>
        <% @payments.each do |payment| %>
        <tr >
            <td><%= number_to_currency payment.price, precision: 2 %></td>
            <td><%= payment.client.name %></td>
            <td><%= payment.payment_type %></td>
            <td><%= payment.date_payment %></td>
            <td><%= payment.description %></td>
            <td><%= payment.client %></td>
            <td><%= link_to 'Mostrar', client_payment_path(@client, payment), class: 'btn btn-default btn-xs' %></td>
            <td><%= link_to 'Editar', edit_client_payment_path(@client,payment), class: 'btn btn-default btn-xs' %></td>
            <td><%= link_to 'Deletar', [@client,payment], method: :delete, data: { confirm: 'Você tem certeza?' } , class: 'btn btn-danger btn-xs'%></td>
        </tr>
        <% end %>
    </tbody>
</table>

<br>

<%= link_to 'Novo pagamento', new_client_payment_path(@client) , class: 'btn btn-primary'%>
