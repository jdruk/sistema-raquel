<div class="panel panel-default">
    <div class="panel-heading">Informações do cliente</div>
    <div class="panel-body">
        <strong>Nome:</strong>
        <%= @client.name %>
    </p>

    <p>
        <strong>Endereço:</strong>
        <%= @client.address %>
    </p>

    <p>
        <strong>telefone:</strong>
        <%= @client.telephone %>
    </p>
    <%= link_to 'Editar', edit_client_path(@client), class: 'btn btn-primary' %>
    <%= link_to 'Voltar', clients_path, class: 'btn btn-default' %>
</div>
</div>
<div class="well">
    <div class="row">
        <div class="col-sm-3 col-xs-12 col-md-3 text-center top-buffer">
            <%= link_to 'Novo pagamento', new_client_payment_path(@client) , class: 'btn btn-primary btn-white' %>
        </div>
        <div class="col-sm-3 col-xs-6 col-md-3 text-center top-buffer">
            Pagos: <div class="btn btn-default btn-sm"><%= number_to_currency @client.paid %></div>
        </div>
        <div class="col-sm-3 col-xs-6 col-md-3 text-center top-buffer">
            Débitos: <div class="btn btn-danger btn-sm"><%= number_to_currency @client.debit %></div>
        </div>
        <div class="col-sm-3 col-xs-12 col-md-3 text-center top-buffer">
            Caixa: <div class="btn btn-default btn-sm"><%= number_to_currency @client.cashier %></div>
        </div>
    </div>
</div>
<p>
    <h2>Pagamentos</h2>
    <div class="panel panel-info">
        <div class="panel-heading">Pagamentos efetuados</div>
        <%= render :partial => 'payments/list_payment',:locals => { payments: @client.selection_payment(1) } %>
    </div>
    <h2>Débitos</h2>
    <div class="panel panel-danger">
        <div class="panel-heading">Débitos do cliente</div>
        <%= render :partial => 'payments/list_payment',:locals => { payments: @client.selection_payment(0) } %>
    </div>
