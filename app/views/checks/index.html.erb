<h1>Lista de cheques</h1>
<div class="well">
    <div class="panel panel-default">
        <div class="panel-heading">
        Descrição geral:<br />
        Carteira: <div class="btn btn-default"><%= number_to_currency Check.status_check_group 0 %> </div>
        Transferido: <div class="btn btn-default"><%= number_to_currency Check.status_check_group 1 %></div>
        Devolvido: <div class="btn btn-danger"><%= number_to_currency Check.status_check_group 2 %></div>
        Diversos: <div class="btn btn-default"><%= number_to_currency Check.status_check_group 3 %> </div>
        </div>
        <div class="panel-body">
            <%= link_to 'Novo cheque', new_check_path, class: 'btn btn-primary'%>
        </div>
    </div>
</div>
    <%= render partial: 'geral', locals: {checks: Check.type_check(0), head_name: 'Carteira' } %>
    <%= render partial: 'geral', locals: {checks: Check.type_check(1), head_name: 'Transferido' } %>
    <%= render partial: 'geral', locals: {checks: Check.type_check(2), head_name: 'Devolvido' } %>
    <%= render partial: 'geral', locals: {checks: Check.type_check(3),  head_name: 'Diversos'} %>
